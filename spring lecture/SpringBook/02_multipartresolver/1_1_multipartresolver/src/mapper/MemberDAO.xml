<mapper namespace="dao.MemberDao">
	<insert id="insert" parameterType="vo.Member">
		insert into member(userid,pwd,name,gender,birth,is_lunar,cphone,email,habit,regdate) values(#{userid},#{pwd},#{name},#{gender},#{birth},#{isLunar},#{cPhone},#{email},#{habit}, sysdate)
	</insert>
	
	<select id="getMember" resultType="vo.Member">
		select userid,pwd,name,gender,birth,is_lunar,cphone,email,habit,regdate from member where userid=#{userid}
	</select>
	
	<update id="update">
		update member
		set pwd = #{pwd}, name=#{name}, cphone=#{cPhone}, email=#{email}
		where userid = #{userid}
	</update>
</mapper>